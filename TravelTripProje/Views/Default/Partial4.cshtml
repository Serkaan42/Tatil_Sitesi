@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach (var c in Model)
        {
            <div class="bot-img">
                <a href="/Blog/BlogDetay/@c.ID"> <img src="@c.BlogImage" alt="" style="width:120px;height:80px" /> </a>
            </div>
            <div class="bot-desc">
               <a href="/Blog/BlogDetay/@c.ID"> <p>@c.Aciklama.Substring(0,100)... </p> </a> 
            </div>
            <div class="clear"></div>
        }
        <div class="clear"></div>
    </div>
    @Html.Action("Partial5","Default")
</div>